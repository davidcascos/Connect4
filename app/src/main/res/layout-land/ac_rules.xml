<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:id = "@+id/ac_rules"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:layout_marginLeft = "40dp"
	android:layout_marginRight = "40dp"
	tools:context = ".layouts.Rules">

	<ImageButton
		android:id = "@+id/bt_back"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_alignParentLeft = "true"
		android:layout_alignParentTop = "true"
		android:layout_marginTop = "20dp"
		android:background = "@color/background"
		app:srcCompat = "@drawable/ic_back"/>

	<LinearLayout
		android:id = "@+id/linearTitle"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_centerHorizontal = "true"
		android:layout_marginTop = "40dp"
		android:orientation = "horizontal">

		<ImageView
			android:id = "@+id/iv_rules"
			android:layout_width = "50dp"
			android:layout_height = "match_parent"
			android:layout_marginRight = "10dp"
			android:src = "@drawable/iv_rules"/>

		<TextView
			android:id = "@+id/tv_titleRules"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:text = "@string/titleRules"
			android:textColor = "@color/textColorDark"
			android:textSize = "36sp"
			android:textStyle = "bold|italic"/>
	</LinearLayout>

	<TextView
		android:id = "@+id/tv_textRules"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_centerInParent = "true"
		android:layout_centerHorizontal = "true"
		android:text = "@string/textRules"
		android:textColor = "@color/textColorDark"
		android:textSize = "20sp"/>
</RelativeLayout>