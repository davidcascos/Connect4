<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".fragments.GridFrag">

	<LinearLayout
		android:id = "@+id/linearInfo"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_centerHorizontal = "true"
		android:layout_marginStart = "40dp"
		android:layout_marginTop = "40dp"
		android:layout_marginEnd = "40dp"
		android:baselineAligned = "false"
		android:orientation = "horizontal">

		<LinearLayout
			android:id = "@+id/linearTurn"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_weight = "1"
			android:orientation = "horizontal">

			<TextView
				android:id = "@+id/tv_turn"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginEnd = "10dp"
				android:text = "@string/turn"
				android:textColor = "@color/textColorDark"
				android:textSize = "30sp"
				android:textStyle = "bold|italic"/>

			<ImageView
				android:id = "@+id/iv_token"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_gravity = "center"
				android:src = "@drawable/token_red"/>
		</LinearLayout>

		<LinearLayout
			android:id = "@+id/linearTime"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_weight = "1"
			android:gravity = "end"
			android:orientation = "horizontal">

			<ImageView
				android:id = "@+id/iv_time"
				android:layout_width = "30dp"
				android:layout_height = "30dp"
				android:layout_gravity = "center"
				android:layout_marginEnd = "10dp"
				android:src = "@drawable/ic_clock"/>

			<FrameLayout
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content">

				<TextView
					android:id = "@+id/tv_time"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:textSize = "30sp"
					android:textStyle = "bold|italic"/>

				<Chronometer
					android:id = "@+id/ch_time"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:textSize = "30sp"
					android:textStyle = "bold|italic"/>
			</FrameLayout>
		</LinearLayout>
	</LinearLayout>

	<GridView
		android:id = "@+id/grid_view"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_below = "@id/linearInfo"
		android:layout_centerHorizontal = "true"
		android:layout_gravity = "bottom"
		android:layout_marginTop = "80dp"
		android:background = "@color/colorGrid"
		android:gravity = "center"/>

</RelativeLayout>